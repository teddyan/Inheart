                        <th class="col-sm-2">數量</th>
                        <th class="col-sm-2">小計</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/Images/box11100.jpg" width="185" height="125" />
