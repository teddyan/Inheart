@{
    Layout = "~/Views/Shared/_HomeTemplate.cshtml";
}
<title>首頁</title>
<div class="container-fluid">
    <div class="row">
        <div class="tm-navbar-container">
            <!-- navbar   -->
            <nav class="navbar navbar-full navbar-fixed-top">
                <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#tmNavbar">
                    &#9776;
                </button>
                <div class="collapse navbar-toggleable-sm" id="tmNavbar">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#top"><img src="~/Content/mytemplate/img/logo3.png" alt="Logo" /></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tm-section-2">禮盒</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tm-section-3">產品</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tm-section-4">購物須知</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link external" href="columns.html">Columns</a>
                            </li>*@
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="tm-intro">
            <section id="tm-section-1">
                <div class="tm-container text-xs-center tm-section-1-inner">
                    @*<img src="img/tm-lumino-logo.png" alt="Logo" class="tm-logo">*@
                    @*<img src="~/Content/mytemplate/img/logo2.png" alt="Logo" class="tm-logo"/>*@
                    <h1 class="tm-site-name">印在心上　幸福美好</h1>
                    <a href="#tm-section-2" class="tm-intro-link">了解詳情</a>
                </div>
            </section>
        </div>
    </div>
    @Html.Action("PlanIndex")

    <div class="row">

        <section id="tm-section-3" class="tm-section">
            <div class="tm-container text-xs-center">

                <h2 class="blue-text tm-title">印好產品</h2>
                @Ajax.ActionLink("Classic Cookies", "Food", new { id = 1 }, new AjaxOptions { UpdateTargetId = "foodTest" }, new { @class = "btn tm-light-blue-bordered-btn tm-news-link" })
                @Ajax.ActionLink("Long Cookies", "Food", new { id = 2 }, new AjaxOptions { UpdateTargetId = "foodTest" }, new { @class = "btn tm-light-blue-bordered-btn tm-news-link" })
                @Ajax.ActionLink("Cookies", "Food", new { id = 3 }, new AjaxOptions { UpdateTargetId = "foodTest" }, new { @class = "btn tm-light-blue-bordered-btn tm-news-link" })
                @Ajax.ActionLink("Chinese Cake", "Food", new { id = 4 }, new AjaxOptions { UpdateTargetId = "foodTest" }, new { @class = "btn tm-light-blue-bordered-btn tm-news-link" })
                <div class="tm-img-grid" id="foodTest">
                    @Html.Action("Food")

                </div>
            </div>
        </section>

    </div> <!-- row -->

    <div class="row gray-bg">

        <section id="tm-section-4" class="tm-section">
            <div class="tm-container">

                <h2 class="blue-text tm-title text-xs-center">Contact Us</h2>

                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
                    <form action="index.html" method="post" class="tm-contact-form">
                        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 tm-form-group-left">
                            <input type="text" id="contact_name" name="contact_name" class="form-control" placeholder="Name" required />
                        </div>
                        <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 tm-form-group-right">
                            <input type="email" id="contact_email" name="contact_email" class="form-control" placeholder="Email" required />
                        </div>
                        <div class="form-group">
                            <input type="text" id="contact_subject" name="contact_subject" class="form-control" placeholder="Subject" required />
                        </div>
                        <div class="form-group">
                            <textarea id="contact_message" name="contact_message" class="form-control" rows="6" placeholder="Message" required></textarea>
                        </div>

                        <button type="submit" class="btn tm-light-blue-bordered-btn pull-xs-right">Submit</button>
                    </form>
                </div> <!-- col -->

                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 margin-top-xs-50">
                    <h3 class="light-blue-text tm-subtitle">聯絡資訊</h3>
                    <p>Line@@: ******</p>
                    <p>
                        Tel: <a href="tel:0100200340">*******</a><br>
                        Email: <a href="mailto:info@company.com">*****.com</a>
                    </p>
                </div>
            </div>
        </section>

        <!-- footer -->
        <footer class="tm-footer">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <p class="text-xs-center tm-footer-text">Copyright &copy; 2016 Company Name</p>
            </div>
        </footer>

    </div> <!-- row -->

</div> <!-- container-fluid -->